.flash-box
.wrapper
  = render 'shared/side_bar'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group{}
          sample
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member YURI
      = link_to edit_user_path(@group.id) do
        .main-header__edit-btn Edit
    .messages
      .message
        .message__upper-info 
          %p.message__upper-info__talker YURI
          %p.message__upper-info__date 2019/08/18(sun) 19:08:28
        %p.message__text こんにちは！
      .message
        .message__upper-info 
          %p.message__upper-info__talker YURI
          %p.message__upper-info__date 2019/08/19(mon) 19:08:28
        %p.message__text こんにちは！
    .form
      = form_for [@group, @message] do |f|
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = fa_icon 'picture-o'
            = f.file_field :image, class: 'input-box__image__file'
        = f.submit 'Send', class: 'submit-btn'
